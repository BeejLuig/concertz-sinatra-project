<div class="concert-list">
  <h2>Upcoming Concerts</h2>
    <% Concert.all.sort_by {|x| x.concert_date }.each do |concert| %>
      <% if concert.concert_date >= Time.now %>
        <p class="concert-info"><%= "#{concert.artist.name} - #{concert.location} - #{concert.concert_date.strftime("%m/%d/%Y")} - "%><a href="/concerts/<%=concert.id%>">See ticket price</a></p>
      <% end %>
    <% end %>
  <h2>Past Concerts</h2>
  <% Concert.all.sort_by {|x| x.concert_date }.each do |concert| %>
    <% if concert.concert_date < Time.now %>
      <p class="concert-info"><%= "#{concert.artist.name} - #{concert.location} - #{concert.concert_date.strftime("%m/%d/%Y")} - "%><a href="/concerts/<%=concert.id%>">See ticket price</a></p>
    <% end %>
  <% end %>
</div>
